{
  "name": "eai-full-stack-exercise",
  "version": "1.0.0",
  "description": "EAI Full Stack Exercise",
  "scripts": {
    "postinstall": "[ -d '.husky' ] && husky install || true && npm run install:all",
    "install:all": "npm --prefix ./database install && npm --prefix ./backend install && npm --prefix ./frontend install",
    "start:database": "npm run --prefix ./database start",
    "start:backend": "npm run --prefix ./backend start",
    "start:frontend":"npm run --prefix ./frontend start"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/nunoconc/eai-full-stack-exercise.git"
  },
  "devDependencies": {
    "@commitlint/cli": "^18.6.0",
    "@commitlint/config-conventional": "^18.6.0",
    "husky": "^9.1.4"
  }
}
